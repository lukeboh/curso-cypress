  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "run": "cypress run",
    "report:merge": "npx mochawesome-merge cypress/mochawesome-report/*.json > cypress/mochawesome-report/mochawesome.json",
    "report:generate": "npx mochawesome-report-generator cypress/mochawesome-report/mochawesome.json --reportDir cypress/results --charts --inline",
    "report": "npm run run && npm run report:merge && npm run report:generate"
  },
  "devDependencies": {
    "cypress": "^13.6.4",
    "cypress-multi-reporters": "^2.0.5",
    "dayjs": "^1.11.13",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.2.0"
  }
}
